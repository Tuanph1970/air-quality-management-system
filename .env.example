# =============================================================================
# Air Quality Management System - Environment Variables
# =============================================================================
# Copy to .env and fill in production values. Never commit .env to git.
# Variables without defaults in docker-compose.prod.yml are REQUIRED for prod.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Credentials (shared across all PostgreSQL instances)
# -----------------------------------------------------------------------------
DB_USER=aqms_user
DB_PASSWORD=aqms_pass

# -----------------------------------------------------------------------------
# Database Ports (dev only - not exposed in production)
# -----------------------------------------------------------------------------
FACTORY_DB_PORT=5432
SENSOR_DB_PORT=5433
ALERT_DB_PORT=5434
USER_DB_PORT=5435
REMOTE_SENSING_DB_PORT=5436

# -----------------------------------------------------------------------------
# RabbitMQ
# -----------------------------------------------------------------------------
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=          # Leave empty for dev, set for production

# -----------------------------------------------------------------------------
# JWT / Auth
# -----------------------------------------------------------------------------
JWT_SECRET=change-me-in-production-use-a-long-random-string

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
API_GATEWAY_PORT=8000
FACTORY_SERVICE_PORT=8001
SENSOR_SERVICE_PORT=8002
ALERT_SERVICE_PORT=8003
AIR_QUALITY_SERVICE_PORT=8004
USER_SERVICE_PORT=8005
REMOTE_SENSING_SERVICE_PORT=8006
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Remote Sensing APIs
COPERNICUS_ADS_API_KEY=your-copernicus-api-key
NASA_EARTHDATA_TOKEN=your-nasa-earthdata-token
SENTINEL_HUB_CLIENT_ID=your-sentinel-hub-client-id
SENTINEL_HUB_CLIENT_SECRET=your-sentinel-hub-secret

# City Bounding Box (Hanoi defaults)
CITY_BBOX_NORTH=21.1
CITY_BBOX_SOUTH=20.9
CITY_BBOX_EAST=105.9
CITY_BBOX_WEST=105.7

# -----------------------------------------------------------------------------
# Frontend (build-time variables must start with VITE_)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000/api/v1
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG           # DEBUG for dev, INFO or WARNING for production

# -----------------------------------------------------------------------------
# Production Only
# -----------------------------------------------------------------------------
IMAGE_TAG=latest          # Docker image tag for prod deployments
RATE_LIMIT_PER_MINUTE=60  # API gateway rate limit
